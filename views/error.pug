extends layout.pug


block header
  header.header
    .header-wrapper
      a(href='/').left
        .brand-logo NitEx

      form.form.left(method='GET', action='/explore')
        input.form__search.form__search--small(type='text', placeholder='Where you at', name='location', value= location || '')
      
      nav.nav.right
        if user
          button.nav__item(type='button', data-modal='logout') #[span.avatar(style= 'background-image:url("' + user.twitterAvatar + '")')]
        else
          button.nav__item(type='button', data-modal='login') #[i.fa.fa-user-circle]

block main_content
  .card-wrapper
    .card.card--nocontent
      h4= error